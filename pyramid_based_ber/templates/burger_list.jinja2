{% extends "index.jinja2" %}

{% block css %}<link rel="stylesheet" type="text/css" href="../static/css/table.css">{% endblock css %}

{% block content %}
<div class="burger-list">
    <div class="return">
      
      <a href="/list"><img src="../static/img/backarrow.png" width="7px"> К списку заказов</a>
    </div>
    <h1>Заказ на кухню</h1>
    <table border="1">
    <tr>
      <td>Номер</td>
      <td>Булка</td>
      <td>Мясо</td>
      <td>Соус</td>
      <td>Начинка</td>
      </tr>
        {% for burger in burgers %}
        <tr>
          <td>{{ burger.id }}</td>
          <td>{{ burger.bun }}</td>
          <td>{{ burger.cutlet }}</td>
          <td>{{ burger.sauces }}</td>
          <td>{{ burger.stuffings }}</td>
      </tr>
        {% endfor %}
    </table>
</div>
{% endblock content %}